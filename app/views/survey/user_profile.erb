

<h1><%=@user.username%></h1>
<% @surveys.each do |survey| %>
<p><a href="/surveys/<%=survey.id%>"><%= survey.title%></a></p>

<form action="/survey/<%=survey.id%>/delete" method= "POST">
  <input type="hidden" name="_method" value="Delete">
  <input type="submit" value="Delete Survey">
</form>
<form action="/survey/<%=survey.id%>/update" method= "POST">
  <input type="hidden" name="_method" value="put">
  <input type="submit" value="Update Survey">
</form>
<%end%>
<p></p>
<p><a href='/surveys'>Back to ALL SURVEY</a></p>


