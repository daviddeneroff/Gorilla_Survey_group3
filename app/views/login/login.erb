<nav>
  <ul class="login-signup">
  <li>
  <h3>Create an Account</h3>
    <form action="/signup" method="POST">
      <div class="form-group">
        <label>Username</label>
        <input type="text" name="username" class="bootstrap-override form-control" id="exampleInputEmail1" placeholder="Username">
      </div>

      <div class="form-group">
        <label>Email address</label>
        <input type="email" name="email" class="bootstrap-override form-control" id="exampleInputEmail1" placeholder="Enter email">
      </div>

      <div class="form-group">
        <label>Password</label>
        <input type="password" name="password" class="bootstrap-override form-control" id="exampleInputPassword1" placeholder="Password">
      </div>

      <div class="form-group">
        <label>Password</label>
        <input type="password" name="password_confirmation" class="bootstrap-override form-control" id="exampleInputPassword1" placeholder="Confirm Password">
      </div>

      <button type="submit" class="btn btn-default">Submit</button>
    </form>
  </li>

  <li>
    <h3>Already a member? signin here</h3>
    <form action="/login" method="POST">
      <div class="form-group">
        <label>Username</label>
        <input type="text" name="user[username]" class="bootstrap-override form-control" id="exampleInputEmail1" placeholder="Username">
      </div>

      <div class="form-group">
        <label>Password</label>
        <input type="password" name="user[password]" class="bootstrap-override form-control" id="exampleInputPassword1" placeholder="Password">
      </div>
      <button type="submit" class="btn btn-default">Submit</button>
    </form>
  </li>
</nav>